 <!-- Header Section Begin -->
 <header class="header-section">
    <!-- <div class="header-top">
       
    </div> -->
    <div class="container">
        <div class="inner-header">
            <div class="row">
                <div class="col-lg-2 col-md-2">
                    <div class="logo">
                        <a href="./index.html">
                            <h2><b>HOSO</b></h2>
                        </a>
                    </div>
                </div>
                <div class="col-lg-7 col-md-7">
                    <div class="advanced-search">
                        <button type="button" class="category-btn">All Categories</button>
                        <div class="input-group">
                            <input type="text" placeholder="What do you need?">
                            <button type="button"><i class="ti-search"></i></button>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 text-right col-md-3">
                    <ul class="nav-right">
                        <li class="heart-icon">
                            <a href="#">
                                <i class="icon_heart_alt"></i>
                                <span>1</span>
                            </a>
                        </li>
                        <li class="cart-icon">
                            <a href="#">
                                <i class="icon_bag_alt"></i>
                                <!-- <span></span> -->
                                <span>0</span>
                            </a>
                            <div class="cart-hover">
                                <div class="select-items">
                                    <table>
                                        <tbody>
                                            <tr>
                                                <td class="si-pic"><img src="img/select-product-1.jpg" alt=""></td>
                                                <td class="si-text">
                                                    <div class="product-selected">
                                                        <p>$60.00 x 1</p>
                                                        <h6>Kabino Bedside Table</h6>
                                                    </div>
                                                </td>
                                                <td class="si-close">
                                                    <i class="ti-close"></i>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="si-pic"><img src="img/select-product-2.jpg" alt=""></td>
                                                <td class="si-text">
                                                    <div class="product-selected">
                                                        <p>$60.00 x 1</p>
                                                        <h6>Kabino Bedside Table</h6>
                                                    </div>
                                                </td>
                                                <td class="si-close">
                                                    <i class="ti-close"></i>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="select-total">
                                    <span>total:</span>
                                    <h5>$120.00</h5>
                                </div>
                                <div class="select-button">
                                    <a href="#" class="primary-btn view-card">VIEW CARD</a>
                                    <a href="#" class="primary-btn checkout-btn">CHECK OUT</a>
                                </div>
                            </div>
                        </li>
                        <li class="cart-icon">
                            <a href="#">
                                <i class="fa-regular fa-user"></i>
                                <!-- <span>3</span> -->
                            </a>
                            <div class="cart-hover">
                                <div class="select-button">
                                    <% if(profile) {%> 
                                    <a href="#" class="primary-btn view-card"><%=profile.name %> </a>
                                    <a href="/logout" class="primary-btn checkout-btn">LOGOUT</a>
                                    <% }else{ %> 
                                    <a href="/login" class="primary-btn view-card">LOGIN</a>
                                    <a href="/register" class="primary-btn checkout-btn">REGISTER</a>
                                    <% } %> 
                                </div>
                            </div>
                        </li>
                        
                        
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="nav-item">
        <div class="container">
            <div class="nav-depart">
                <div class="depart-btn">
                    <i class="ti-menu"></i>
                    <span>All departments</span>
                    
                    <ul class="depart-hover">
                        <% categoryDetails.forEach(item=>{ %> 
                        <li class="active"><a href="#"><%=item.name %> </a></li>
                          <% }) %>                         
                    </ul>
                </div>
            </div>
            <nav class="nav-menu mobile-menu">
                <ul>
                    <li class="active"><a href="/index">Home</a></li>
                    <li><a href="/shop">Shop</a></li>
                    <li><a href="#">Collection</a>
                        
                        <ul class="dropdown">
                            <% categoryDetails.forEach(item=>{ %> 
                            <li><a href="#"><%=item.name %> </a></li>
                            <% }) %>
                        </ul>
                       
                    </li>
                    <li><a href="/shopping-cart">Cart</a></li>
                    <li><a href="/contact">Contact</a></li>
                    
                </ul>
            </nav>
            
            <div id="mobile-menu-wrap"></div>
        </div>
    </div>
</header>
<!-- Header End -->
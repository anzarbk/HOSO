              <script>
                async function removeFromWish(el) {
                  const index = $(el).data("id");
                  const res = await $.ajax({
                    url: "/remove-from-wish",
                    method: "PATCH",
                    data: {
                      index,
                    },
                  });
                  if (res.status === "success") {
                    $(el).parent("td").parent("tr").hide();
                  } else {
                    Swal.fire({
                      icon: "error",
                      title: "Oops...",
                      text: "Something went wrong!",
                    });
                  }
                }
                async function addingToCarthome(el) {
      const productId = $(el).data("id");
      console.log("cart script");
      $.ajax({
        url: "/add-to-carthome",
        method: "PATCH",
        data: {
          productId,
        },
        success: (response) => {
          if (response.status == "success") {
              $(el)
              .css({backgroundColor: '#19dc26'})
            const Toast = Swal.mixin({
              toast: true,
              position: "top-end",
              showConfirmButton: false,
              timer: 2000,
              timerProgressBar: true,
              didOpen: (toast) => {
                toast.addEventListener("mouseenter", Swal.stopTimer);
                toast.addEventListener("mouseleave", Swal.resumeTimer);
              },
            });

            Toast.fire({
              icon: "success",
              title: "added to cart",
            });
          } else if (response.status == "already") {
              $(el)               
              .css({backgroundColor: '#19dc26'})
            const Toast = Swal.mixin({
              toast: true,
              position: "top-end",
              showConfirmButton: false,
              timer: 2000,
              timerProgressBar: true,
              didOpen: (toast) => {
                toast.addEventListener("mouseenter", Swal.stopTimer);
                toast.addEventListener("mouseleave", Swal.resumeTimer);
              },
            });

            Toast.fire({
              icon: "success",
              title: "already exist in cart",
            });
          } else {
            Swal.fire({
              icon: "error",
              title: "Oops...",
              text: "Something went wrong!",
            });
          }
        },
      });
    }

    <script>
       function addActiveClass(el) {
          $(".address-card").removeClass("select-address");
          $(el).addClass("select-address");
          
          const index = $(el).data('index')
          const fullname = $('.select-address .fullname').text()
            const city = $('.select-address .city').text()
            const postcode = $('.select-address .postcode').text()
            const st_address = $('.select-address .st_address').text()
            const phone = $('.select-address .phone').text()

            $("input[name='firstname']").val((fullname.split(" "))[0])
            $("input[name='lastname']").val((fullname.split(" "))[1])
            $("input[name='town']").val(city)
            $("input[name='streetaddress']").val(st_address)
            $("input[name='postcode']").val(postcode)
            $("input[name='phone']").val(phone)

            $('#delete-address').attr('data-index',index)

            
        }
        async function deleteAddress(el){
            const index = $(el).data('index')

            const result = await Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
                })
            if (!result.isConfirmed) return;
              
         const response =  await $.ajax({
                  url:`/delete-address`,
                  method:'PATCH',
                  data:{index}})

                    if(response.status){
                        Swal.fire(
                            'Deleted!',
                            'Address has been deleted.',
                            'success'
                            )
                        $(`[data-index=${index}]`).hide()
                    }else{
                        Swal.fire({
                            icon: "error",
                            title: "Oops...",
                            text: `Something went wrong!, ${response.message}`,
                        });
                    }

                 } 
        
      </script>
    

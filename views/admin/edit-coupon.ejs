<!DOCTYPE html>
<html lang="en" dir="ltr">
  <%- include('partial/admin-head.ejs') %>
  <body
    class="ec-header-fixed ec-sidebar-fixed ec-sidebar-dark ec-header-light"
    id="body"
  >
    <!-- WRAPPER -->
    <div class="wrapper">
      <!-- LEFT MAIN SIDEBAR -->
      <%- include('partial/admin-sidebar.ejs') %>
      <!-- PAGE WRAPPER -->
      <div class="ec-page-wrapper">
        <!-- Header -->
        <%- include('partial/admin-header.ejs') %> 
        <!-- CONTENT WRAPPER -->
        <div class="ec-content-wrapper">
          <div class="content ">
              <div class="breadcrumb-wrapper breadcrumb-wrapper-2 breadcrumb-contacts">
                  <h1>Coupons</h1>
                  <p class="breadcrumbs"><span><a href="/admin/index">Home</a></span>
                      <span><i class="mdi mdi-chevron-right"></i></span>Coupon
                  </p>
              </div>
              <div class="row">
                  <div class="col-10 ">
                      <div class="ec-cat-list card card-default mb-24px">
                          <div class="card-body">
                              <div class="ec-cat-form">
                                  <h4>Add New Coupon</h4>
                                  <form class="form-group" action="/admin/coupon-edit?id=<%= coupon._id %>" method="post">
                                      <div class="form-group row">
                                          <label for="text" class="col-12 col-form-label">Name</label>
                                          <div class="col-12">
                                              <input id="text" name="name" value="<%=coupon.name%>"
                                                  class="form-control here slug-title" type="text"
                                                  required>
                                              <div class="form-group row">
                                                  <label for="text"
                                                      class="col-12 col-form-label">Code</label>
                                                  <div class="col-12">
                                                      <input id="text" name="code" value="<%=coupon.code%>"
                                                          class="form-control here slug-title" type="text"
                                                          onkeyup="this.value = this.value.toUpperCase();"
                                                          required>
                                                          <div class="col-md-12">
                                                              <label class="form-label"> Description</label>
                                                              <input class="form-control" rows="2" name="description" value="<%=coupon.description%>" required></input>
                                                          </div>
                                                          
                                                          <div class="col-md-12">
                                                              <label for="form-label">percentage</label>
                                                              <input type="number" name="percentage" min="0" max="100" value="<%=coupon.percentage%>"
                                                              class="form-control here slug-title" required>
                                                          </div>
                                                          <div class="col-md-12">
                                                              <label for="form-label">expire on</label>
                                                              <input type="date" name="expiry" value="12-42-2433"
                                                              class="form-control here slug-title" required>
                                                          </div>
                                                          <div class="col-md-12 d-flex">
                                                              <div class="col-6 ">
                                                              <label for="form-label">Min Limit</label>
                                                              <input type="number" min="0" name="minLimit" value="<%=coupon.minLimit%>" class="form-control here slug-title" required>
                                                              </div>
                                                              <div class="col-6">
                                                              <label for="form-label">Max Limit</label>
                                                              <input type="number" name="maxLimit" value="<%=coupon.maxLimit%>" class="form-control here slug-title" required>

                                                              </div>
                                                          </div>
                                                          <div class="d-flex justify-content-center">
                                                              <button class="btn btn-outline-success" type="submit">Submit</button>
                                                            </div>

                                                            <div  class="text-center font-weight-bold">

                                                              <p style="color: orangered;"><%=  locals.message ? message : '' ;%></p>
                                                            </div>
                                                         

                                  </form>


                              </div>
                          </div>
                      </div>
                  </div>


              </div>

          </div> <!-- End Page Wrapper -->

      </div> <!-- End Wrapper -->
        <!-- End Content Wrapper -->

        <!-- Footer -->
        <footer class="footer mt-auto">
          <div class="copyright bg-white">
            <p>
              Copyright &copy; <span id="ec-year"></span
              ><a
                class="text-primary"
                href="https://themeforest.net/user/ashishmaraviya"
                target="_blank"
              >
                HOSO Admin Dashboard</a
              >. All Rights Reserved.
            </p>
          </div>
        </footer>
      </div>
      <!-- End Page Wrapper -->
    </div>
    <!-- End Wrapper -->

    <!-- Common Javascript -->
    <script src="/assets/plugins/jquery/jquery-3.5.1.min.js"></script>
    <script src="/assets/plugins/jquery/jquery.notify.min.js"></script>
    <script src="/assets/plugins/jquery/jquery.bundle.notify.min.js"></script>
    <script src="/assets/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/plugins/tags-input/bootstrap-tagsinput.js"></script>
    <script src="/assets/plugins/simplebar/simplebar.min.js"></script>
    <script src="/assets/plugins/jquery-zoom/jquery.zoom.min.js"></script>
    <script src="/assets/plugins/slick/slick.min.js"></script>

    <!-- Option Switcher -->
    <script src="/assets/plugins/options-sidebar/optionswitcher.js"></script>

    <!-- Ekka Custom -->
    <script src="/assets/js/ekka.js"></script>
  </body>
</html>
